<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <EditText
        android:id="@+id/nazwaInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="99dp"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="99dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Nazwa"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bialkoInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/bialkoInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="99dp"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="99dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Białko[g]"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/weglowodanyInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nazwaInput" />

    <EditText
        android:id="@+id/weglowodanyInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="99dp"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="99dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Weglowodany[g]"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/tluszczeInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bialkoInput" />

    <EditText
        android:id="@+id/tluszczeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="99dp"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="99dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Tłuszcze[g]"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/kcalInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weglowodanyInput" />

    <EditText
        android:id="@+id/kcalInput"
        android:layout_width="241dp"
        android:layout_height="49dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="99dp"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="99dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Wartość Energetyczna [kCal]"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/buttonPotw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tluszczeInput" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="295dp"
        android:layout_height="16dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="25dp"
        android:text="Wprowadź produkt (wartości w 100g produktu)"
        app:layout_constraintBottom_toTopOf="@+id/nazwaInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/buttonPotw"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="100dp"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="32dp"
        android:onClick="Onclik"
        android:text="Potwierdź"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kcalInput" />

    <TextView
        android:id="@+id/textViewPOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="178dp"
        android:layout_marginLeft="176dp"
        android:layout_marginRight="178dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="20dp"
        android:hint="powinno"
        app:layout_constraintBottom_toTopOf="@+id/buttonPotw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kcalInput" />

    <Button
        android:id="@+id/buttonV"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="471dp"
        android:text="VAll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonPotw"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</android.support.constraint.ConstraintLayout>